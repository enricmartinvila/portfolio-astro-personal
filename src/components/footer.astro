---
import { useTranslations } from '../i18n/utils';

const { lang } = Astro.props;
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
---

<footer class="w-full border-t border-white/10 bg-[#121212]/80 backdrop-blur-xl mt-20">
  <div class="max-w-6xl mx-auto px-4 py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      
      <!-- Left Column: Contact & Info -->
      <div class="space-y-8">
        <div class="space-y-4">
          <h2 class="text-3xl md:text-4xl font-bold text-white">
            {t('footer.contact')}
          </h2>
          <p class="text-gray-400 text-lg max-w-md">
            {t('footer.text')}
          </p>
        </div>

        <div class="flex gap-4">
          <!-- GitHub -->
          <a href="https://github.com/enricmartinvila" target="_blank" rel="noopener noreferrer" class="p-3 rounded-full bg-white/5 hover:bg-[#585919] hover:text-white transition-all duration-300 group">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-6 text-gray-300 group-hover:text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
          </a>
          
          <!-- LinkedIn -->
          <a href="https://www.linkedin.com/in/enric-martin-vila-41371425a/" target="_blank" rel="noopener noreferrer" class="p-3 rounded-full bg-white/5 hover:bg-[#585919] hover:text-white transition-all duration-300 group">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-6 text-gray-300 group-hover:text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>
          </a>
          <!-- Email -->
          <a href="mailto:enric.martin.dev@gmail.com" class="p-3 rounded-full bg-white/5 hover:bg-[#585919] hover:text-white transition-all duration-300 group">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-6 text-gray-300 group-hover:text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
          </a>
        </div>

        <div class="pt-8 border-t border-white/10">
          <p class="text-sm text-gray-500">
            &copy; {currentYear} Enric Martin Vila. {t('footer.rights')}
          </p>
        </div>
      </div>

      <!-- Right Column: Image Space -->
      <div class="relative h-64 md:h-80 w-full rounded-2xl overflow-hidden border border-white/10 group">
        <!-- Placeholder / Background Effect -->
        <div class="absolute inset-0 bg-[#585919]/10 group-hover:bg-[#585919]/20 transition-colors duration-500"></div>
        
        <!-- Image Container -->
        <div class="absolute inset-0 flex items-center justify-center">
            <!-- Replace src with your actual footer image -->
            <img 
                src="/fotos/old.webp" 
                alt="Footer visual" 
                class="w-full h-full object-cover opacity-60 group-hover:opacity-80 transition-opacity duration-500 scale-105 group-hover:scale-100"
            />
        </div>
        
        <!-- Overlay Content (Optional) -->
        <div class="absolute bottom-0 left-0 w-full p-6 bg-linear-to-t from-black/80 to-transparent">
            <p class="text-white/80 text-sm font-mono">{t('footer.built')}</p>
        </div>
      </div>

    </div>
  </div>
</footer>
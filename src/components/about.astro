---
import { useTranslations } from '../i18n/utils';

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="about" class="min-h-screen flex flex-col justify-center py-12 md:py-20 relative overflow-hidden">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16 items-center">
    
    <!-- Text Content -->
    <div class="space-y-8 relative z-10">
      <h2 class="text-4xl md:text-7xl font-bold relative inline-block">
        {t('about.title')}
        <span class="absolute -bottom-2 left-0 w-1/3 h-2 bg-[#585919]"></span>
      </h2>
      
      <div class="space-y-6 text-lg md:text-xl text-gray-400 leading-relaxed">
        <p set:html={t('about.p1')} />
        <p>
          {t('about.p2')}
        </p>
      </div>

      <!-- Stats / Quick Info -->
      <div class="grid grid-cols-2 gap-6 pt-4">
        <div class="p-4 border border-white/10 rounded-lg bg-white/5 backdrop-blur-sm hover:border-[#585919]/50 transition-colors">
          <h3 class="text-3xl font-bold text-[#585919]">2+</h3>
          <p class="text-sm text-gray-400 uppercase tracking-wider">{t('about.years')}</p>
        </div>
        <div class="p-4 border border-white/10 rounded-lg bg-white/5 backdrop-blur-sm hover:border-[#585919]/50 transition-colors">
          <h3 class="text-3xl font-bold text-[#585919]">11+</h3>
          <p class="text-sm text-gray-400 uppercase tracking-wider">{t('about.projects')}</p>
        </div>
      </div>
    </div>

    <!-- Visual / Skills -->
    <div class="relative">
      <!-- Decorative background element -->
      <div class="absolute -inset-4 bg-[#585919]/20 rounded-full blur-3xl opacity-20 animate-pulse"></div>
      
      <div class="relative bg-[#1a1a1a] border border-white/10 rounded-xl p-6 md:p-8 shadow-2xl transform hover:-translate-y-2 transition-transform duration-500">
        <div class="flex items-center gap-2 mb-6 border-b border-white/10 pb-4">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
          <span class="ml-2 text-xs text-gray-500 font-mono">skills.json</span>
        </div>
        
        <div class="font-mono text-sm md:text-base space-y-2">
          <div class="flex">
            <span class="text-purple-400">const</span>
            <span class="text-yellow-200 ml-2">developer</span>
            <span class="text-white ml-2">=</span>
            <span class="text-white ml-2">{</span>
          </div>
          
          <div class="pl-4">
            <span class="text-blue-300">name:</span>
            <span class="text-green-300">"Enric Martin Vila"</span>,
          </div>
          
          <div class="pl-4">
            <span class="text-blue-300">role:</span>
            <span class="text-green-300">"Frontend Developer"</span>,
          </div>

          <div class="pl-4">
            <span class="text-blue-300">stack:</span>
            <span class="text-white">[</span>
          </div>
          
          <div class="pl-8 grid grid-cols-1 gap-1">
            <span class="text-green-300">"React"</span>,
            <span class="text-green-300">"Astro"</span>,
            <span class="text-green-300">"TailwindCSS"</span>,
            <span class="text-green-300">"TypeScript"</span>,
            <span class="text-green-300">"Node.js"</span>
          </div>

          <div class="pl-4">
            <span class="text-white">]</span>,
          </div>

          <div class="pl-4">
            <span class="text-blue-300">location:</span>
            <span class="text-green-300">"{t('about.location')}"</span>
          </div>

          <div class="text-white">};</div>
        </div>
      </div>
    </div>
  </div>
</section>